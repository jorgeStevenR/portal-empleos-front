{
  "version": 2,
  "buildCommand": "npm install -g @angular/cli@20.3.9 && npm run build",
  "outputDirectory": "dist/portal-empleos-front",
  "framework": "none",
  "builds": [
    {
      "src": "dist/portal-empleos-front/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/portal-empleos-front/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
